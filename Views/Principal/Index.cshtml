@model Survey

@{
    ViewData["Title"] = "Encuesta Dojo";
}

<!DOCTYPE html>
<html>
<head>
    <title>Formulario de Registro</title>
    <link rel="stylesheet" href="~/css/styles.css"/>
</head>
<body>
    <h1>Encuesta Dojo</h1>
    <div class="container">
        <h2>Formulario de Registro</h2>
        <form asp-controller="Principal" asp-action="ProcesaEncuesta" method="post">
            <div class="form-group">
                <label asp-for="Nombre">Nombre:</label>
                <input asp-for="Nombre" class="form-control" required>
                <span asp-validation-for="Nombre"></span>
            </div>

            <div class="form-group">
                <label asp-for="Localizacion">Localización del Dojo:</label>
                <select asp-for="Localizacion" class="form-control">
                    <option value="santiago">Santiago</option>
                    <option value="valparaiso">Valparaíso</option>
                    <option value="concepcion">Concepción</option>
                </select>
                <span asp-validation-for="Localizacion"></span>
            </div>

            <div class="form-group">
                <label asp-for="Lenguaje">Lenguaje Favorito:</label>
                <select asp-for="Lenguaje" class="form-control">
                    <option value="csharp">C#</option>
                    <option value="java">Java</option>
                    <option value="python">Python</option>
                    <option value="php">PHP</option>
                    <option value="js">JavaScript</option>
                </select>
                <span asp-validation-for="Lenguaje"></span>
            </div>

            <div class="form-group">
                <label asp-for="Comentario">Comentario:</label>
                <textarea asp-for="Comentario" class="form-control"></textarea>
                <span asp-validation-for="Comentario"></span>
            </div>

            <!-- Campo para la fecha DateInFuture -->
            <div class="form-group">
                <label asp-for="DateInFuture">Fecha en el Futuro:</label>
                <input asp-for="DateInFuture" type="date" class="form-control" required>
                <span asp-validation-for="DateInFuture"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Enviar">
            </div>
        </form>
    </div>
</body>
</html>
